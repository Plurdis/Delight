<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Delight.Component.Controls">
    <Style x:Key="TrackItemStyle" TargetType="{x:Type local:TrackItem}">
        <Setter Property="Background" Value="White" />
        <Setter Property="BorderBrush" Value="Black" />
        <Setter Property="BorderThickness" Value="2" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:TrackItem}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="5" />
                        </Grid.ColumnDefinitions>

                        <Grid
                            Grid.ColumnSpan="3"
                            Background="{TemplateBinding Background}"
                            IsHitTestVisible="False">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition Height="32" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Margin="1"
                                VerticalAlignment="Center"
                                Foreground="Black"
                                Text="{TemplateBinding Text}"
                                TextAlignment="Left" />
                            <Image
                                Grid.Row="1"
                                HorizontalAlignment="Left"
                                Source="{TemplateBinding Thumbnail}" />
                        </Grid>
                        <Rectangle
                            x:Name="dragLeft"
                            Cursor="SizeWE"
                            Fill="Transparent" />
                        <Rectangle
                            x:Name="dragMove"
                            Grid.Column="1"
                            Fill="Transparent" />
                        <Rectangle
                            x:Name="dragRight"
                            Grid.Column="2"
                            Cursor="SizeWE"
                            Fill="Transparent" />


                        <Border
                            Grid.ColumnSpan="3"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            IsHitTestVisible="False">
                        </Border>

                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="Background" Value="#FFB1B1B1" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>