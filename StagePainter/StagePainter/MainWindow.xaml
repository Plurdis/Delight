<Window x:Class="StagePainter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StagePainter"
        mc:Ignorable="d"
        Title="StagePainter 1.0" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem x:Uid="miFile" Header="File(_F)">
                <MenuItem x:Uid="miOpen" Header="Open(_O)">
                    <MenuItem x:Uid="miProject" Header="Project(_P)" InputGestureText="Ctrl+Shift+O"/>
                    <MenuItem x:Uid="miFile_1" Header="File(_F)" InputGestureText="Ctrl+O"/>
                </MenuItem>
                <MenuItem x:Uid="miNewProject" Header="New Project(_H)" InputGestureText="Ctrl+Shift+N"/>
                <Separator/>
                <MenuItem x:Uid="miRecentMedia" Header="Recently used Media Files(_F)">
                    <MenuItem x:Uid="miNone" Header="(None)" IsEnabled="False"/>
                </MenuItem>
                <MenuItem x:Uid="miRecentProject" Header="Recently used Project Files(_J)">
                    <MenuItem x:Uid="miNone_1" Header="(None)" IsEnabled="False"/>
                </MenuItem>
                <Separator/>
                <MenuItem x:Uid="miSave" Header="Save(_S)" InputGestureText="Ctrl+S"/>
                <MenuItem x:Uid="miSaveAs" Header="Save As(_A)" InputGestureText="Ctrl+Shift+S"/>
                <Separator/>
                <MenuItem x:Uid="miExport" Header="Export(_E)" InputGestureText="Ctrl+E"/>
                <Separator/>
                <MenuItem x:Uid="miExit" Header="Exit(_X)" InputGestureText="Alt+F4"/>
            </MenuItem>
            <MenuItem x:Uid="miHelp" Header="Help(_H)">
                <MenuItem x:Uid="miHelpView" Header="View Help(_V)"/>
                <Separator/>
                <MenuItem x:Uid="miViewInfo" Header="About StagePainter(_A)"/>
            </MenuItem>
        </Menu>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid>
                <StackPanel Margin="5">
                    <TextBlock x:Uid="tbDebugPanel" FontSize="18" Text="Debug Panel"/>
                    <TextBlock Margin="0,10,0,0">
                        <Run x:Uid="runCurrLang1" Text="Current Language"/> : <Run x:Uid="runCurrLang2" Text="English (en-US)"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
