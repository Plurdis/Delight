<UserControl x:Class="StagePainter.Debug.Controls.TimeLineItemDesign"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StagePainter.Debug.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="500" MinWidth="1">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="5"/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="AliceBlue" Background="DarkSlateBlue" BorderThickness="1" Grid.ColumnSpan="3"/>
        
        <Grid Grid.Column="1" IsHitTestVisible="False">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Text="Name" Foreground="White" Margin="5,5,5,0"/>
            <Rectangle Grid.Row="1" Fill="Beige"/>
        </Grid>
        <Rectangle x:Name="dragLeft" Fill="Transparent"/>
        <Rectangle x:Name="dragMove" Fill="Transparent" Grid.Column="1"/>
        <Rectangle x:Name="dragRight" Grid.Column="2" Fill="Transparent"/>
        
        
    </Grid>
</UserControl>