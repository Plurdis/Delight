<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:StagePainter.Debug.Controls"
                    xmlns:cvter="clr-namespace:StagePainter.Debug.Converter"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
                

    <cvter:MinusConverter x:Key="MinusConverter"/>
    <Style x:Key="TimeLineStyle" TargetType="{x:Type local:TimeLine}">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:TimeLine}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Rectangle Height="1" 
                                   Margin="0,39,0,0" 
                                   Fill="Black" 
                                   VerticalAlignment="Top"/>
                        <StackPanel x:Name="trackPanel" 
                                    Margin="0,40,0,0"/>
                        <Rectangle x:Name="trackSlider"
                                   Width="1" 
                                   Fill="Red"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Bottom">
                            <!--Height="{TemplateBinding Height, Converter=MinusConverter}" -->
                            <Rectangle.Height>
                                <TemplateBinding Property="ActualHeight" Converter="{StaticResource MinusConverter}">
                                    <TemplateBindingExtension.ConverterParameter>
                                        <sys:Int32>30</sys:Int32>
                                    </TemplateBindingExtension.ConverterParameter>
                                </TemplateBinding>
                            </Rectangle.Height>
                        </Rectangle>

                        <ScrollBar Grid.Row="1" Maximum="100" Orientation="Horizontal"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>