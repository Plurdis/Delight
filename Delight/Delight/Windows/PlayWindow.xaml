<Window x:Class="Delight.Windows.PlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Delight.Windows"
        xmlns:ct="clr-namespace:Delight.Controls"
        xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        mc:Ignorable="d"
        Title="PlayWindow" Width="1920" Height="1080" WindowStyle="None" ResizeMode="NoResize" Background="Black">
    <!--AllowsTransparency="True" WindowStyle="None"-->
    <Grid x:Name="rootElement" Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="1"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ct:MediaElementPro x:Name="player1" Grid.Column="0" Visibility="Hidden" IsHitTestVisible="False" Opacity="0.7"/>
        <ct:MediaElementPro x:Name="player2" Grid.Column="2" Visibility="Hidden" IsHitTestVisible="False" Opacity="0.7"/>
        <Slider Value="{Binding ElementName=player1, Path=Opacity}" Width="100" Background="Red" VerticalAlignment="Top" HorizontalAlignment="Left" Maximum="1"/>
        <Image x:Name="testImage" Grid.Column="0" Grid.Row="2"/>
        <WindowsFormsHost Grid.Row="2" Grid.Column="2" IsHitTestVisible="False">
            <wf:Panel x:Name="control" Dock="Fill" BackColor="Black"/>
        </WindowsFormsHost>

        <Rectangle Grid.RowSpan="3" Grid.Column="1" Fill="Red"/>
        <Rectangle Grid.Row="1" Grid.ColumnSpan="3" Fill="Red"/>
    </Grid>
</Window>
