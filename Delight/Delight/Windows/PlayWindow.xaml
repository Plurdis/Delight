<Window x:Class="Delight.Windows.PlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Delight.Windows"
        xmlns:ct="clr-namespace:Delight.Controls"
        mc:Ignorable="d"
        
        Title="PlayWindow" Width="1920" Height="1080" AllowsTransparency="True" WindowStyle="None" Background="Black">
    <Grid x:Name="rootElement" Background="Black">
        <ct:MediaElementPro x:Name="player2" Visibility="Hidden" IsHitTestVisible="False" Opacity="0.7"/>
        <ct:MediaElementPro x:Name="player1" Visibility="Hidden" IsHitTestVisible="False" Opacity="0.7"/>
        <Slider Value="{Binding ElementName=player1, Path=Opacity}" Width="100" Background="Red" VerticalAlignment="Top" HorizontalAlignment="Left" Maximum="1"/>
    </Grid>
</Window>
