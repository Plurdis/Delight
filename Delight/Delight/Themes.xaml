                                            <sys:Int32>30</sys:Int32>
                                        </TemplateBindingExtension.ConverterParameter>
                                    </TemplateBinding>
                                </Rectangle.Height>
                            </Rectangle>
                        </Grid>

                        <ScrollBar
                            x:Name="scrollBar"
                            Grid.Row="3"
                            Grid.ColumnSpan="2"
                            Maximum="100"
                            Orientation="Horizontal"
                            Style="{StaticResource TimeLineScrollBar}"
                            Visibility="Hidden">
                        </ScrollBar>

                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

