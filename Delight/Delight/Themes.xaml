                                        </Style>
                                    </StackPanel.Resources>
                                    <Border BorderThickness="0">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="투명도" />
                                            <TextBox
                                                Grid.Column="1"
                                                Padding="5,0"
                                                VerticalAlignment="Center"
                                                Text="100" />
                                            <TextBlock Grid.Column="2" Text="%" />
                                        </Grid>
                                    </Border>
                                    <Border BorderThickness="0">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="사이즈" />
                                            <TextBox
                                                Grid.Column="1"
                                                Padding="5,0"
                                                VerticalAlignment="Center"
                                                Text="100" />
                                            <TextBlock Grid.Column="2" Text="%" />
                                        </Grid>
                                    </Border>
                                    <Border BorderThickness="0">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="볼륨" />
                                            <TextBox
                                                Grid.Column="1"
                                                Padding="5,0"
                                                VerticalAlignment="Center"
                                                Text="100" />
                                            <TextBlock Grid.Column="2" Text="%" />
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </Grid>
                            <Grid Grid.Row="1" Grid.Column="1">
                                <StackPanel>
                                    <Border />
                                    <Border />
                                    <Border />
                                    <Rectangle Height="1" Fill="White" />
                                </StackPanel>
                            </Grid>
                            <Grid Grid.Column="1" Background="Gray">
                                <TextBlock
                                    x:Name="itemName"
                                    Margin="5,0"
                                    VerticalAlignment="Center"
                                    FontFamily="/Delight;component/Resources/Fonts/#Helvetica" />
                            </Grid>
