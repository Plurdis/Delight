    <Style x:Key="PresetPanelStyle" TargetType="{x:Type ct:PresetPanel}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ct:PresetPanel}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="188" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid Background="Red" />
                        <Grid Grid.Row="1">
                            <StackPanel x:Name="spTypes">
                                <StackPanel.Resources>
                                    <Style TargetType="{x:Type Label}">
                                        <Setter Property="FontSize" Value="15" />
                                        <Setter Property="FontFamily" Value="/Delight;component/Resources/Fonts/#Helvetica" />
                                        <Setter Property="Foreground" Value="White" />
                                        <Setter Property="Template">
