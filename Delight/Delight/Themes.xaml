                    <Grid>
                        <Grid Background="#FF1D1D1D">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid x:Name="gridHeader" Background="Transparent">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    Text="{TemplateBinding Text}"
                                    TextAlignment="Center" />
                            </Grid>
                            <StackPanel x:Name="Items" Grid.Row="1">
