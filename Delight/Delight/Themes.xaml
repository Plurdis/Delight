                                x:Name="positioner"
                                Grid.RowSpan="2"
                                Width="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                Fill="Red"
                                IsHitTestVisible="False">
                                <Rectangle.Height>
                                    <TemplateBinding Converter="{StaticResource MinusConverter}" Property="ActualHeight">
