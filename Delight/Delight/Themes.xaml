                        <Grid
                            Grid.RowSpan="3"
                            Grid.Column="1"
                            ClipToBounds="True">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="32" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid x:Name="dragRange" Background="Transparent" />
