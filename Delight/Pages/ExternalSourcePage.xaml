<UserControl
    x:Class="Delight.Pages.ExternalSourcePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:coreS="clr-namespace:Delight.Core.Sources;assembly=Delight.Core"
    xmlns:cvt="clr-namespace:Delight.Component.Converters;assembly=Delight.Component"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Delight.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:opt="clr-namespace:Delight.Core.Sources.Options;assembly=Delight.Core"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid>
            <ListBox
                Background="{x:Null}"
                BorderBrush="{x:Null}"
                SelectedIndex="0">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <Setter Property="FontSize" Value="16" />
                        <Setter Property="Margin" Value="20,5" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                    <ContentPresenter Content="{TemplateBinding Content}" />
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="FontWeight" Value="Bold" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBoxItem Content="찾아보기" />
                <ListBoxItem Content="인기 소스" />
                <ListBoxItem Content="설치된 소스" />
            </ListBox>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ListBox
                x:Name="templates"
                Margin="5"
                Background="{x:Null}"
                BorderBrush="{x:Null}"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type coreS:BaseSource}">
                        <Grid
                            Width="220"
                            Height="180"
                            Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid>
                                <Grid>
                                    <Image
                                        x:Name="img"
                                        Margin="10"
                                        Source="{Binding ThumbnailUri, Converter={cvt:UriConverter}}" />
                                    <Grid
                                        Width="{Binding Path=ActualWidth, ElementName=img}"
                                        Height="{Binding Path=ActualHeight, ElementName=img}"
                                        Margin="10">
                                        <Border
                                            Padding="4"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            Background="#E0000000">
                                            <Grid>
                                                <TextBlock Foreground="White" Text="{Binding TypeText}" />
                                            </Grid>
                                        </Border>
                                    </Grid>

                                </Grid>
                            </Grid>

                            <TextBlock
                                Grid.Row="1"
                                FontSize="15"
                                Text="{Binding Title}" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                    <Grid x:Name="bg">
                                        <ContentPresenter />
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="bg" Property="Background" Value="Gray" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True" Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>

            <GridSplitter
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                Background="#FFD1D1D1" />

            <Grid Grid.Column="2">
                <StackPanel Margin="10">
                    <TextBlock
                        FontSize="20"
                        Text="{Binding Path=SelectedItem.Title, ElementName=templates}"
                        TextTrimming="CharacterEllipsis" />
                    <TextBlock Margin="0,10,0,0" Text="동영상 소스" />
                    <Grid Margin="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock VerticalAlignment="Center" Text="옵션 : " />
                        <ComboBox
                            x:Name="cb"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            ItemsSource="{Binding Path=SelectedItem.Options, ElementName=templates}"
                            SelectedIndex="0">
                            <ComboBox.ItemTemplate>
                                <DataTemplate DataType="{x:Type opt:BaseOption}">
                                    <TextBlock Text="{Binding Name}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <Button
                            x:Name="btnDownload"
                            Grid.Column="2"
                            Margin="4"
                            Padding="10,4"
                            Content="다운로드" />
                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
