<UserControl
    x:Class="Delight.Pages.TemplateShopPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="clr-namespace:Delight.Component.Common;assembly=Delight.Component"
    xmlns:components="clr-namespace:Delight.Core.Stage.Components;assembly=Delight.Core"
    xmlns:coreS="clr-namespace:Delight.Core.Sources;assembly=Delight.Core"
    xmlns:cvt="clr-namespace:Delight.Component.Converters;assembly=Delight.Component"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Delight.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:medias="clr-namespace:Delight.Core.Stage.Components.Media;assembly=Delight.Core"
    d:DesignHeight="450"
    d:DesignWidth="1000"
    mc:Ignorable="d">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid>
            <ListBox
                x:Name="tcSelectedIndex"
                Background="{x:Null}"
                BorderBrush="{x:Null}"
                SelectedIndex="0">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <Setter Property="FontSize" Value="16" />
                        <Setter Property="Margin" Value="20,5" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                    <ContentPresenter Content="{TemplateBinding Content}" />
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="FontWeight" Value="Bold" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBoxItem Content="템플릿 업로드" />
                <ListBoxItem Content="찾아보기" />
                <ListBoxItem Content="인기 템플릿" />
                <ListBoxItem Content="설치된 템플릿" />
            </ListBox>
        </Grid>

        <Grid Grid.Row="1">

            <TabControl BorderBrush="{x:Null}" SelectedIndex="{Binding Path=SelectedIndex, ElementName=tcSelectedIndex}">
                <TabControl.ItemContainerStyle>
                    <Style TargetType="{x:Type TabItem}">
                        <Setter Property="Visibility" Value="Collapsed" />
                    </Style>
                </TabControl.ItemContainerStyle>
                <TabItem>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Margin="10">
                            <!--<Grid Background="Gray">-->
                            <TextBlock Text="현재 프로젝트의 아이템" />
                            <!--</Grid>-->
                            <Rectangle
                                Height="2"
                                Margin="0,5"
                                Fill="Gray" />
                            <ListBox x:Name="projectItems" BorderBrush="{x:Null}">
                                <ListBox.Resources>
                                    <Style TargetType="CheckBox">
                                        <Setter Property="Cursor" Value="Hand" />
                                        <Setter Property="Content" Value="" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type CheckBox}">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition />
                                                        </Grid.ColumnDefinitions>
                                                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                                            <Ellipse
                                                                x:Name="checkedEllipse"
                                                                Width="20"
                                                                Height="20"
                                                                Margin="10,0"
                                                                Fill="White"
                                                                Stroke="Black" />
                                                            <Path
                                                                x:Name="checkedPath"
                                                                Grid.Row="1"
                                                                Width="17.98"
                                                                Height="14.11"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"
                                                                Data="M-467.63813,83.022512 L-449.2877,101.26504 -412.83214,64.50113 -396.16459,79.500284 -449.49918,132.83244 -483.63274,100.56448 z"
                                                                Fill="#FFF4F4F5"
                                                                Stretch="Fill"
                                                                Stroke="Black"
                                                                Visibility="Hidden" />
                                                        </Grid>

                                                        <ContentPresenter x:Name="content" Grid.Column="1" />
                                                    </Grid>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsChecked" Value="True">
                                                            <Setter TargetName="checkedEllipse" Property="Fill" Value="Black" />
                                                            <Setter TargetName="checkedPath" Property="Visibility" Value="Visible" />
                                                        </Trigger>
                                                        <Trigger Property="IsChecked" Value="False" />
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.Resources>
                                <ListBox.ItemTemplate>
                                    <DataTemplate DataType="{x:Type components:StageComponent}">
                                        <Grid>
                                            <!--<Border BorderBrush="Black" BorderThickness="1" />-->
                                            <CheckBox IsChecked="{Binding Checked, NotifyOnSourceUpdated=True}" SourceUpdated="CheckBox_SourceUpdated">
                                                <Grid Margin="10">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="{Binding Identifier}" />
                                                    <TextBlock Grid.Column="1" Text="{Binding TypeText}" />
                                                </Grid>
                                            </CheckBox>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel />
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="{x:Type ListBoxItem}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                                    <ContentPresenter />
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>
                        </StackPanel>

                        <GridSplitter
                            Grid.Column="1"
                            HorizontalAlignment="Stretch"
                            Background="#FFD1D1D1" />

                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <StackPanel Margin="10">
                                <TextBlock x:Name="tbTemplate" TextTrimming="CharacterEllipsis" />
                            </StackPanel>
                            <Button
                                Grid.Row="1"
                                Margin="5"
                                Padding="5"
                                Content="패킹 시작" />
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem>
                    <ListBox
                        x:Name="templates"
                        Margin="5"
                        Background="{x:Null}"
                        BorderBrush="{x:Null}"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="{x:Type coreS:BaseSource}">
                                <Grid
                                    Width="220"
                                    Height="180"
                                    Margin="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Image Margin="10" Source="{Binding ThumbnailUri, Converter={cvt:UriConverter}}" />
                                    <TextBlock
                                        Grid.Row="1"
                                        FontSize="15"
                                        Text="{Binding Title}" />
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="{x:Type ListBoxItem}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                            <Grid x:Name="bg">
                                                <ContentPresenter />
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="bg" Property="Background" Value="Gray" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel IsItemsHost="True" Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                    </ListBox>
                </TabItem>
            </TabControl>
        </Grid>

    </Grid>
</UserControl>
