<UserControl
    x:Class="Delight.Pages.TemplateShopPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="clr-namespace:Delight.Component.Common;assembly=Delight.Component"
    xmlns:coreT="clr-namespace:Delight.Core.Template.Items;assembly=Delight.Core"
    xmlns:cvt="clr-namespace:Delight.Component.Converters;assembly=Delight.Component"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Delight.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:opt="clr-namespace:Delight.Core.Template.Options;assembly=Delight.Core"
    d:DesignHeight="450"
    d:DesignWidth="1000"
    mc:Ignorable="d">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid>
            <ListBox
                Background="{x:Null}"
                BorderBrush="{x:Null}"
                SelectedIndex="0">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <Setter Property="FontSize" Value="16" />
                        <Setter Property="Margin" Value="20,5" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                    <ContentPresenter Content="{TemplateBinding Content}" />
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="FontWeight" Value="Bold" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <!--<ListBox.ItemTemplate>
                    <DataTemplate DataType="{x:String}">
                    </DataTemplate>
                </ListBox.ItemTemplate>-->
                <ListBoxItem Content="찾아보기" />
                <ListBoxItem Content="인기 템플릿" />
                <ListBoxItem Content="설치된 템플릿" />
            </ListBox>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ListBox
                Margin="5"
                Background="{x:Null}"
                BorderBrush="{x:Null}">
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type coreT:BaseSource}">
                        <Grid
                            Width="220"
                            Height="180"
                            Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Image Margin="10" Source="{Binding ThumbnailUri, Converter={cvt:UriConverter}}" />
                            <TextBlock
                                Grid.Row="1"
                                FontSize="15"
                                Text="{Binding Title}" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                    <ContentPresenter />
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True" Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <coreT:YoutubeSource Title="ㅁㄴㅇㄹ 테스트인거시여" />
            </ListBox>

            <GridSplitter
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                Background="#FFD1D1D1" />

            <Grid Grid.Column="2">
                <StackPanel Margin="10">
                    <TextBlock
                        FontSize="20"
                        Text="{Binding Title}"
                        TextTrimming="CharacterEllipsis" />
                    <TextBlock Margin="0,10,0,0" Text="유튜브 동영상" />
                    <Grid Margin="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock VerticalAlignment="Center" Text="옵션 : " />
                        <ComboBox
                            x:Name="cb"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            ItemsSource="{Binding Options}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate DataType="{x:Type opt:BaseOption}">
                                    <TextBlock Text="{Binding Name}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <Button
                            x:Name="btnDownload"
                            Grid.Column="2"
                            Margin="4"
                            Padding="10,4"
                            Content="다운로드" />
                    </Grid>

                    <Image />
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
